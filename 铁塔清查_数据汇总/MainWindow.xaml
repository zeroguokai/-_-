<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:铁塔清查_数据汇总"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="汇总表路径文本框" Text="汇总表位置"/>
        <TextBox Name="清单表文件夹路径文本框"  Grid.Row="1" Text="清单表文件夹位置"/>
        <TextBlock Name="状态框" Grid.Row="2" Text="0/0" TextAlignment="Center"/>
        <Button Name="B2" Grid.Column="1" Content="..." Click="Button_Click"/>
        <Button Name="B3" Grid.Column="1" Grid.Row="1" Content="..." Click="Button_Click_2"/>
        <Button Grid.Column="1" Name="B1" Grid.Row="2" Content="开始生成" Click="kaishi"/>
    </Grid>
</Window>
